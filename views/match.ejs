            <div class="bg-white rounded-b-md mt-1">
                <input type="text" name="msg" id="msg" placeholder="Message your opponent here"
                    class="w-full focus:outline-none px-5 py-2 disabled:bg-slate-500" 
                    onkeydown="sendChatMsg(event)">
            </div>
        </div>
    </div>

    <div class="flex flex-row md:w-1/3 m-auto justify-center pt-8">
        <button disabled class="bg-violet-500 rounded-l-md text-white px-4 py-2 hover:bg-violet-700 text-sm
        transition duration-500 disabled:bg-slate-500 disabled:scale-100 shadow-lg border-r"
        id="btn_win" onclick="modalWin()">
            Win
        </button>
        <button disabled class="bg-violet-500 text-white px-4 py-2 hover:bg-violet-700 text-sm
        transition duration-500 disabled:bg-slate-500 disabled:scale-100  shadow-lg border-r"
        id="btn_loose" onclick="modalLoose()">
            Loose
        </button>
