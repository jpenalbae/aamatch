<div id="login" class="hidden">

    <div class="m-auto md:w-1/3 bg-water-tile rounded-md shadow-xl p-2 mb-8 max-w-md">
    <div class="flex flex-col bg-white shadow-md px-4 sm:px-6 md:px-8 lg:px-10 py-8 rounded-md w-full max-w-md">
        <div class="font-medium self-center text-xl sm:text-2xl text-gray-800">Login To Your Account</div>
        
        <div class="mt-10">
          <form action="javascript:void(0);" id="form_login">
            <div class="flex flex-col mb-6">
              <label for="user" class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600">
                Username:
              </label>
              <div class="relative">
                <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                    <i class="fa-solid fa-user"></i>
                </div>
    
                <input id="username" type="username" name="username" class="text-sm sm:text-base placeholder-gray-500 pl-10 pr-4 rounded-lg border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" placeholder="Username" />
              </div>
            </div>
            <div class="flex flex-col mb-6">
              <label for="password" class="mb-1 text-xs sm:text-sm tracking-wide text-gray-600">Password:</label>
              <div class="relative">
                <div class="inline-flex items-center justify-center absolute left-0 top-0 h-full w-10 text-gray-400">
                    <i class="fa-solid fa-lock"></i>
                </div>
    
                <input id="password" type="password" name="password" class="text-sm sm:text-base placeholder-gray-500 pl-10 pr-4 rounded-lg border border-gray-400 w-full py-2 focus:outline-none focus:border-blue-400" placeholder="Password" />
              </div>
            </div>
    
            <div class="flex items-center mb-6 -mt-4">
              <div class="flex ml-auto">
                <a href="#reset" onclick="changeView('reset')" class="inline-flex text-xs sm:text-sm text-blue-500 hover:text-blue-700">
                  Forgot Your Password?
                </a>
              </div>
            </div>
    
            <div class="flex w-full">
              <button id="btn_login" onclick="login(this.form)" class="flex items-center justify-center focus:outline-none text-white text-sm sm:text-base bg-blue-600 hover:bg-blue-700 rounded py-2 w-full transition duration-150 ease-in">
                <span class="mr-2">Login</span>
                <i class="fa-solid fa-sign-in" id="icon_login"></i>
              </button>
            </div>
          </form>
          <div id="errormsg" class="text-red-600 text-xs text-center mt-3">
          </div>
        </div>
        <div class="flex justify-center items-center mt-6">
          <a href="#register" onclick="changeView('register')" class="inline-flex items-center font-bold text-blue-500 hover:text-blue-700 text-xs text-center">
            <i class="fa-solid fa-user-plus"></i>
            <span class="ml-2">You don't have an account?</span>
          </a>
        </div>
      </div>
      </div>
</div>