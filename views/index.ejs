<!DOCTYPE html>
<html>
  <head>
    <title><%= user %></title>
    <link rel='stylesheet' href='/css/main.css' />
    <link href="/css/fontawesome.min.css" rel="stylesheet">
    <link href="/css/solid.min.css" rel="stylesheet">
    <link href="/css/brands.min.css" rel="stylesheet">
    <script src="/js/app.js"></script>
    <% if (user) { %>
        <script> const logged = true; </script>
    <% } else { %>
        <script> const logged = false; </script>
    <% } %>
  </head>
  <!-- <body class="bg-green-200"> -->
<body class="bg-sky-600"></body>


    <!-- modal -->
    <div class="main-modal fixed w-full h-100 inset-0 z-50 overflow-hidden 
            justify-center items-center animated fadeOut faster hidden"
            style="background: rgba(0,0,0,.7);" id="main-modal">
    <div class="border border-teal-500 shadow-lg modal-container bg-white 
            w-11/12 md:max-w-md mx-auto rounded z-50 overflow-y-auto">
        <div class="modal-content py-4 text-left px-6">
            <!--Title-->
            <div class="flex justify-between items-center pb-3">
                <p class="text-2xl font-bold" id="modal_title">Header</p>
                <div class="modal-close cursor-pointer z-50">
                    <button onclick="modalClose()">
                        <svg class="fill-current text-black" xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                            viewBox="0 0 18 18">
                            <path
                                d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z">
                            </path>
                        </svg>
                    </button>
                </div>
            </div>
            <!--Body-->
            <div class="my-5">
                <p id="modal_text">asdasd</p>
            </div>
            <!--Footer-->
            <div class="flex justify-end pt-2">
                <button class="focus:outline-none modal-close px-4 bg-gray-400 p-3 
                        rounded-lg text-black hover:bg-gray-300" onclick="modalClose()">
                    Cancel
                </button>
                <button class="focus:outline-none px-4 bg-teal-500 p-3 ml-3 rounded-lg 
                        text-white hover:bg-teal-400" id="modal_btn">
                        Confirm
                </button>
            </div>
        </div>
    </div>
    </div>

    <!-- header -->
    <div class="flex flex-col items-center p-2 text-xs">
        <div class="bg-black/75 text-slate-100 py-2 px-6 rounded-md relative flex">
            <div class="hidden md:flex md:flex-row">
                <p>Matches:  <%= matches %></p>
                <p class="px-4"> | </p>
                <p>Users:  <%= users %></p>
                <p class="px-4"> | </p>
                <p>Queue:  <%= queue %></p>
                <p class="px-4"> | </p>
            </div>
            <% if (user) { %>
                <p><%= user %></p>
                <p class="px-4"> | </p>
                <a href="/api/p/logout">Logout</a>
            <% } else { %>
                <a href="/#login" onclick="changeView('login')">Login</a>
            <% } %>
        </div>
    </div>

    
    <div class="py-10">
        <a href="/">
            <img id="logo_main" class="m-auto rounded-xl md:w-1/3 fa-bounce" src="/img/logo3.png" alt="logo">
        </a>
    </div> 


    <% if (page == 'match') { %>
        <%- include('match', {}); %>
    <% } else if (page == 'reset') { %>
        <%- include('resetpass', {}); %>
    <% } else { %>
        <%- include('main', {}); %>
        <%- include('wait', {}); %>
        <%- include('login', {}); %>
        <%- include('register', {}); %>
        <%- include('reset', {}); %>
        <%- include('queue_timeout', {}); %>
    <% } %>



    <!-- footer -->
    <div class="flex flex-col items-center p-2 text-xs mt-8 mb-8">
        <div class="bg-white/75 text-slate-700 py-2 px-6 rounded-md relative flex">
            <a href="https://github.com/jpenalbae/aamatch/issues">Report Issue</a>
            <p class="px-4"> | </p>
            <a href="https://github.com/jpenalbae/aamatch/" class="flex flex-row">
                <p>Github</p>
                <i class="fa-brands fa-github text-lg ml-2"></i>
            </a>
            <p class="px-4"> | </p>
            <a href="https://discord.gg/jSaF9tGMHx" class="flex flex-row items-center">
                <p>Discord </p>
                <i class="fa-brands fa-discord text-lg ml-2"></i>
            </a>
        </div>
    </div>

  </body>
</html>
